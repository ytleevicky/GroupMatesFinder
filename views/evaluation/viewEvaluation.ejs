<body>

    <br>

    <h1>Evaluation > View > <%= evaluationInfo.name %>
    </h1>

    <br>

    <div style="padding-left: 130px;">

        <div class="row my-2">
            <div class="col-sm-2">Name</div>
            <div class="col-sm-10">
                <%= evaluationInfo.name %>
            </div>
        </div>

        <div class="row my-2">
            <div class="col-sm-2">Availability</div>
            <div class="col-sm-10">
                <%= evaluationInfo.availability %>
            </div>
        </div>

        <div class="row my-2">
            <div class="col-sm-2">Creator</div>
            <div class="col-sm-10">
                <%= evaluationInfo.creator[0].preferred_name %>
            </div>
        </div>

        <div class="row my-2">
            <div class="col-sm-2">Created</div>
            <div class="col-sm-10">
                <%= new Intl.DateTimeFormat('en-GB', { dateStyle: 'medium' , timeStyle: 'short'
                    }).format(evaluationInfo.createdAt) %>
            </div>
        </div>

        <div class="row my-2">
            <div class="col-sm-2">Modified</div>
            <div class="col-sm-10">
                <%= new Intl.DateTimeFormat('en-GB', { dateStyle: 'medium' , timeStyle: 'short'
                    }).format(evaluationInfo.updatedAt) %>
            </div>
        </div>

    </div>

    <br>
    <br>

    <h3>Evaluation Preview</h3>

    <div class="my-4">

        <h4 style="text-align: center;">Preview Event - Demo Group</h4>

        <div class="my-5">
            <h5>Description:</h5>
            <%= evaluationInfo.description %>
        </div>

        <div class="my-5">
            <h5>Notes:</h5>
            <ul>
                <li>Only ONE attempt allowed for this peer evaluation</li>
                <li>You cannot REATTEMPT the peer evaluation once you finished evaluate all of your group members</li>
                <li>Check check the Group Members before Start </li>
                <li>The evaluation is due on 18 Jan 2021, 05:00 pm</li>
            </ul>
        </div>

        <div class="my-5">

            <h5>Peer Evaluation Question:</h5>

            <% var i=1 %>
                <% evaluationInfo.contain.forEach( function(question) { %>

                    <div class="card my-4">
                        <div class="card-header font-monospace">
                            <b>
                                <%= i %>. <%= question.question %>
                            </b>
                        </div>

                        <div class="card-body">

                            <!-- Table (Display Student in Group) -->

                            <table class="table table-hover table-striped">

                                <thead class="table-light">
                                    <tr>
                                        <th scope="col" span="1" style="width: 20%;">Student ID:
                                        </th>
                                        <th scope="col" span="1" style="width: 20%;">Name</th>
                                        <th scope="col" span="1" style="width: 40%;">Rating</th>
                                    </tr>
                                </thead>

                                <tbody>

                                    <tr>
                                        <td>
                                            Demo Student 1 ID
                                        </td>
                                        <td>
                                            Demo Student 1
                                        </td>
                                        <td>
                                            <select class="form-select" aria-label="Default select example">
                                                <option selected>Please rate</option>
                                                <option value="1">1: Very Unsatisfactory</option>
                                                <option value="2">2: Unsatisfactory</option>
                                                <option value="3">3: Average</option>
                                                <option value="4">4: Good</option>
                                                <option value="5">5: Excellent</option>
                                            </select>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td>
                                            Demo Student 2 ID
                                        </td>
                                        <td>
                                            Demo Student 2
                                        </td>
                                        <td>
                                            <select class="form-select" aria-label="Default select example">
                                                <option selected>Please rate</option>
                                                <option value="1">1: Very Unsatisfactory</option>
                                                <option value="2">2: Unsatisfactory</option>
                                                <option value="3">3: Average</option>
                                                <option value="4">4: Good</option>
                                                <option value="5">5: Excellent</option>
                                            </select>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td>
                                            Demo Student 3 ID
                                        </td>
                                        <td>
                                            Demo Student 3
                                        </td>
                                        <td>
                                            <select class="form-select" aria-label="Default select example">
                                                <option selected>Please rate</option>
                                                <option value="1">1: Very Unsatisfactory</option>
                                                <option value="2">2: Unsatisfactory</option>
                                                <option value="3">3: Average</option>
                                                <option value="4">4: Good</option>
                                                <option value="5">5: Excellent</option>
                                            </select>
                                        </td>
                                    </tr>

                                </tbody>
                            </table>


                        </div>

                    </div>

                    <% i++ %>

                        <% }); %>


                            <div class="d-grid gap-2 col-2 mx-auto">
                                <button class="btn btn-primary" type="button">Submit the
                                    Evaluation</button>
                            </div>

        </div>

    </div>








</body>

<style>
    .card {
        width: 800px;
        margin: auto;
    }
</style>