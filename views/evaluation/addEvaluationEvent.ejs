<body>

    <br>

    <h1><svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-book text-primary" fill="currentColor"
            xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd"
                d="M1 2.828v9.923c.918-.35 2.107-.692 3.287-.81 1.094-.111 2.278-.039 3.213.492V2.687c-.654-.689-1.782-.886-3.112-.752-1.234.124-2.503.523-3.388.893zm7.5-.141v9.746c.935-.53 2.12-.603 3.213-.493 1.18.12 2.37.461 3.287.811V2.828c-.885-.37-2.154-.769-3.388-.893-1.33-.134-2.458.063-3.112.752zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783z" />
        </svg>
        &nbsp;<%= sectioninfo.in[0].courseID %>: <%= sectioninfo.in[0].courseName %> (Section <%= sectioninfo.sectionNum
                    %>)
    </h1>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/teacher/homepage/<%= userid %>">Home</a></li>
            <li class="breadcrumb-item"><a href="/teacher/<%= userid %>/viewCourse/<%= sectioninfo.in[0].id %>">
                    <%= sectioninfo.in[0].courseID %>: <%= sectioninfo.in[0].courseName %>
                </a></li>
            <li class="breadcrumb-item"><a href="/teacher/<%= userid %>/viewSection/<%= sectioninfo.id %>">
                    Section <%= sectioninfo.sectionNum %>
                </a></li>
            <li class="breadcrumb-item"><a
                    href="/teacher/viewSection/<%= sectioninfo.id %>/project/<%= sectioninfo.haveProject[0].id %>/evaluation">
                    Peer Evaluation
                </a></li>
            <li class="breadcrumb-item active" aria-current="page">
                Add Evaluation Event
            </li>
        </ol>
    </nav>

    <br>

    <div class="container" style="padding: 40px 150px;">

        <form method="POST"
            action="/teacher/viewSection/<%= sectioninfo.id %>/project/<%= sectioninfo.haveProject[0].id %>/addEvaluationEvent"
            onsubmit="createForm(this);return false" class="was-validated">

            <div class="mb-4">
                <div class="form-group row">
                    <label for="example-title" class="col-4 col-form-label">Evaluation Name:</label>
                    <div class="col-8">
                        <input type="text" class="form-control" name="EvalEvent[eventName]" required>
                    </div>
                </div>
            </div>

            <div class="mb-4">
                <div class="form-group row">
                    <label for="message-text" class="col-4 col-form-label">Instruction:</label>

                    <div class="col-8">
                        <textarea class="form-control" name="EvalEvent[eventDes]" required></textarea>
                    </div>
                </div>
            </div>

            <div class="mb-4">
                <div class="form-group row">
                    <label for="message-text" class="col-4 col-form-label">Evaluation Template:</label>
                    <div class="col-8">
                        <select class="form-select form-select" name="chooseTempID" required>
                            <option value="">Please choose an Evaluation Template:</option>
                            <% createdEvaluation.createEvaluation.forEach( function(evaluation) { %>
                                <option value="<%= evaluation.id %>">
                                    <%= evaluation.name %>
                                </option>
                                <% }); %>
                        </select>
                    </div>
                </div>
            </div>

            <div class="mb-4">
                <div class="form-group row">
                    <label for="message-text" class="col-4 col-form-label">Due Date:</label>
                    <div class="col-8">
                        <input type="datetime-local" class="form-control" name="dueDate" id="date" required>
                    </div>
                </div>
            </div>

            <div class="mb-4">

                <div class="form-group row">

                    <label for="message-text" class="col-4 col-form-label">Auto-Release
                        Result:</label>

                    <div class="col-2 my-2">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="autoRelease" id="e" value=""
                                onclick="changeStatus();">
                            <label class="form-check-label" for="e">
                                Enabled
                            </label>
                        </div>
                    </div>
                    <div class="col-2 my-2">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="autoRelease" id="d" value="" checked
                                onclick="changeStatus();">
                            <label class="form-check-label" for="d">
                                Disabled
                            </label>
                        </div>
                    </div>

                </div>

            </div>

            <div class="mb-4">
                <div class="form-group row">
                    <label for="message-text" class="col-4 col-form-label">Result Release Date:</label>
                    <div class="col-8">
                        <input type="datetime-local" class="form-control" name="releaseDate" required>
                    </div>
                </div>
            </div>


            <br>

            <button type="submit" class="btn btn-primary mx-1" style="float: right;">Create</button>
            <a href="/teacher/viewSection/<%= sectioninfo.id %>/project/<%= sectioninfo.haveProject[0].id %>/evaluation"
                class="btn btn-secondary mx-1" style="float: right;">Return</a>

        </form>

    </div>

</body>


<script>

    var enabled = document.getElementById("e");
    var disabled = document.getElementById("d");

    disabled.value = "Disabled";

    function changeStatus() {

        enabled.value = null;
        disabled.value = null;

        if (enabled.checked) {

            enabled.value = "Enabled";

        } else if (disabled.checked) {

            disabled.value = "Disabled";

        }

    }


    // function check() {
    //     var date = new Date(document.getElementById("date").value);

    //     var timestamp = date.getTime();

    //     alert(timestamp);
    // }

    async function createForm(oFormElement) {

        var response = await fetch(oFormElement.action, {
            method: "POST",
            credentials: 'same-origin',
            headers: { 'content-type': 'application/x-www-form-urlencoded' }, //enctype code of form
            //put into array            //map into input and encode                                                         //join it
            body: Array.from(oFormElement).map(input => encodeURIComponent(input.name) + '=' + encodeURIComponent(input.value)).join('&'),
        });


        if (response.ok) {
            // validatePwd()
            var data = await response.json();   // for res.ok() or res.json()
            alert(data.message);
            window.location = data.url;
            //location.reload(true);
        } else if (response.status == 401) {
            var data = await response.text();   // for res.send()
            alert(data);
        } else {
            alert(response.statusText);
        }

    };









</script>