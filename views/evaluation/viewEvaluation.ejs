<body>

    <br>

    <h1>Evaluation > View > <%= evaluationInfo.name %>
    </h1>

    <br>

    <div style="padding-left: 130px;">

        <dl class="row my-2">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">
                <%= evaluationInfo.name %>
            </dd>
        </dl>

        <dl class="row my-2">
            <dt class="col-sm-2">Creator</dt>
            <dd class="col-sm-10">
                <%= evaluationInfo.creator[0].preferred_name %>
            </dd>
        </dl>

        <dl class="row my-2">
            <dt class="col-sm-2">Created</dt>
            <dd class="col-sm-10">
                <%= new Intl.DateTimeFormat('en-GB', { dateStyle: 'medium' , timeStyle: 'short'
                    }).format(evaluationInfo.createdAt) %>
            </dd>
        </dl>

        <dl class="row my-2">
            <dt class="col-sm-2">Modified</dt>
            <dd class="col-sm-10">
                <%= new Intl.DateTimeFormat('en-GB', { dateStyle: 'medium' , timeStyle: 'short'
                    }).format(evaluationInfo.updatedAt) %>
            </dd>
        </dl>

    </div>

    <br>
    <br>

    <h3>Evaluation Preview</h3>

    <div class="my-4">

        <h4 style="text-align: center;">Preview Event - Demo Group</h4>

        <div class="my-5">
            <h5>Description:</h5>
            <%= evaluationInfo.description %>
        </div>

        <div class="my-5">
            <h5>Notes:</h5>
            <ul>
                <li>Only ONE attempt allowed for this peer evaluation</li>
                <li>You cannot REATTEMPT the peer evaluation once you finished evaluate all of your group members</li>
                <li>Check check the Group Members before Start </li>
                <li>The evaluation is due on 18 Jan 2021, 05:00 pm</li>
            </ul>
        </div>

        <br>

        <% if (evaluationInfo.createdQuestion.peerEvaluation!=null ) { %>


            <h4><mark>Peer Evaluation Question:</mark></h4>

            <div class="my-5">

                <h4 class="text-secondary" style="text-align: center;">Demo Student 1</h4>

                <br>

                <% var i=1 %>
                    <% evaluationInfo.createdQuestion.peerEvaluation.forEach( function(question) { %>


                        <div class="mb-5">

                            <b>Q<%= i %>. <%= question.question %></b>

                            <% if(question.type=="Rating" ) { %>

                                <div class="my-2" style="padding-left: 50px; width: 650px;">
                                    <select class="form-select w-30" aria-label="Default select example">
                                        <option>Please rate</option>
                                        <option value="1">1: Very Unsatisfactory</option>
                                        <option value="2">2: Unsatisfactory</option>
                                        <option value="3">3: Average</option>
                                        <option value="4">4: Good</option>
                                        <option value="5">5: Excellent</option>
                                    </select>
                                </div>

                                <% } else if (question.type=="Paragraph" ) { %>

                                    <div style="padding-left: 50px;">
                                        <textarea class="form-control my-2" name="Project[projectDescription]" rows="4"
                                            required></textarea>
                                    </div>

                                    <% } else { %>

                                        <div class="input-group flex-nowrap my-2" style="padding-left: 50px;">

                                            <input type="text" class="form-control" aria-label="answer"
                                                aria-describedby="addon-wrapping">
                                        </div>

                                        <% } %>

                        </div>


                        <% i++ %>

                            <% }); %>

            </div>

            <div class="my-5">

                <h4 class="text-secondary" style="text-align: center;">Demo Student 2</h4>

                <br>

                <% var i=1 %>
                    <% evaluationInfo.createdQuestion.peerEvaluation.forEach( function(question) { %>


                        <div class="mb-5">

                            <b>Q<%= i %>. <%= question.question %></b>


                            <% if(question.type=="Rating" ) { %>

                                <div class="my-2" style="padding-left: 50px; width: 650px;">

                                    <select class="form-select w-30" aria-label="Default select example">
                                        <option>Please rate</option>
                                        <option value="1">1: Very Unsatisfactory</option>
                                        <option value="2">2: Unsatisfactory</option>
                                        <option value="3">3: Average</option>
                                        <option value="4">4: Good</option>
                                        <option value="5">5: Excellent</option>
                                    </select>
                                </div>

                                <% } else if (question.type=="Paragraph" ) { %>

                                    <div style="padding-left: 50px;">
                                        <textarea class="form-control my-2" name="Project[projectDescription]" rows="4"
                                            required></textarea>
                                    </div>

                                    <% } else { %>

                                        <div class="input-group flex-nowrap my-2" style="padding-left: 50px;">

                                            <input type="text" class="form-control" aria-label="answer"
                                                aria-describedby="addon-wrapping">
                                        </div>

                                        <% } %>

                        </div>


                        <% i++ %>

                            <% }); %>

            </div>

            <div class="my-5">

                <h4 class="text-secondary" style="text-align: center;">Demo Student 3</h4>

                <br>

                <% var i=1 %>
                    <% evaluationInfo.createdQuestion.peerEvaluation.forEach( function(question) { %>


                        <div class="mb-5">

                            <b>Q<%= i %>. <%= question.question %></b>


                            <% if(question.type=="Rating" ) { %>

                                <div class="my-2" style="padding-left: 50px; width: 650px;">

                                    <select class="form-select w-30" aria-label="Default select example">
                                        <option>Please rate</option>
                                        <option value="1">1: Very Unsatisfactory</option>
                                        <option value="2">2: Unsatisfactory</option>
                                        <option value="3">3: Average</option>
                                        <option value="4">4: Good</option>
                                        <option value="5">5: Excellent</option>
                                    </select>
                                </div>

                                <% } else if (question.type=="Paragraph" ) { %>

                                    <div style="padding-left: 50px;">
                                        <textarea class="form-control my-2" name="Project[projectDescription]" rows="4"
                                            required></textarea>
                                    </div>

                                    <% } else { %>

                                        <div class="input-group flex-nowrap my-2" style="padding-left: 50px;">

                                            <input type="text" class="form-control" aria-label="answer"
                                                aria-describedby="addon-wrapping">
                                        </div>

                                        <% } %>

                        </div>


                        <% i++ %>

                            <% }); %>

            </div>

            <br>

            <% } %>


                <% if(evaluationInfo.createdQuestion.peerEvaluation!=null &&
                    evaluationInfo.createdQuestion.selfEvaluation!=null) { %>
                    <hr>
                    <br>
                    <% } %>


                        <% if (evaluationInfo.createdQuestion.selfEvaluation!=null ) { %>

                            <div class="my-8">

                                <h4><mark>Self Evaluation Question:</mark></h4>
                                <br>

                                <% var i=1 %>
                                    <% evaluationInfo.createdQuestion.selfEvaluation.forEach( function(question) { %>

                                        <div class="mb-5">
                                            <b>Q<%= i %>. <%= question.question %></b>

                                            <% if(question.type=="Rating" ) { %>

                                                <div class="my-2" style="padding-left: 50px; width: 650px;">

                                                    <select class="form-select w-30"
                                                        aria-label="Default select example">
                                                        <option>Please rate</option>
                                                        <option value="1">1: Very Unsatisfactory</option>
                                                        <option value="2">2: Unsatisfactory</option>
                                                        <option value="3">3: Average</option>
                                                        <option value="4">4: Good</option>
                                                        <option value="5">5: Excellent</option>
                                                    </select>
                                                </div>

                                                <% } else if (question.type=="Paragraph" ) { %>

                                                    <div style="padding-left: 50px;">
                                                        <textarea class="form-control my-2"
                                                            name="Project[projectDescription]" rows="4"
                                                            required></textarea>
                                                    </div>

                                                    <% } else { %>

                                                        <div class="input-group flex-nowrap my-2"
                                                            style="padding-left: 50px;">

                                                            <input type="text" class="form-control" aria-label="answer"
                                                                aria-describedby="addon-wrapping">
                                                        </div>

                                                        <% } %>

                                        </div>

                                        <% i++ %>

                                            <% }); %>


                            </div>

                            <% } %>

                                <div class="d-grid gap-2 col-3 mx-auto">
                                    <button class="btn btn-primary" type="button">Submit the
                                        Evaluation</button>
                                </div>

    </div>








</body>

