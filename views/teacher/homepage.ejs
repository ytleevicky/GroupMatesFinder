<body>
    <br>

    <div class="container row">

        <svg width="3em" height="3em" viewBox="0 0 16 16" class="bi bi-house text-warning" fill="currentColor"
            xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd"
                d="M2 13.5V7h1v6.5a.5.5 0 0 0 .5.5h9a.5.5 0 0 0 .5-.5V7h1v6.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5zm11-11V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z" />
            <path fill-rule="evenodd"
                d="M7.293 1.5a1 1 0 0 1 1.414 0l6.647 6.646a.5.5 0 0 1-.708.708L8 2.207 1.354 8.854a.5.5 0 1 1-.708-.708L7.293 1.5z" />
        </svg>
        &nbsp&nbsp&nbsp
        <h1>Home</h1>

    </div>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">Home</li>
        </ol>
    </nav>

    <hr>

    <h3>Courses:</h3>

    <br>

    <% allCourses.instruct.forEach( function(course) { %>

        <div class="card mt-2 px-3">
            <div class="card-body ">
                <div class="row">
                    <div class="col-12 ">
                        <h4 class="card-title "><b><%= course.courseID %> - <%= course.courseName %></b></h4>
                    </div>
                    <div class="col">
                        <h6 class="card-subtitle mb-2 text-muted">
                            <p class="card-text text-muted small "> Teacher: <span class="font-weight-bold"><%= allCourses.preferred_name %></span>
                            </p>
                        </h6>
                    </div>
                </div>
            </div>
        </div>

        <% }); %>

</body>