<body>


  <% if(req.path=="/" || req.path=="/user/login" ) { %>
    <!-- Landing & login page -->

    <%- body %>

      <% } else { %>

        <div class="container" style="padding-top: 20px;">

          <div class="card main-card">

            <div class="card-header" style="background-color: #dcf5f8; border: 0px;" id="appTitle">
              <h2 style="padding: 1px 20px; padding-top: 20px; margin: 0px;"><img src="/images/logo3.png" width="50"
                  height="45" alt="" class="d-inline-block align-top" id="appTitle">&nbsp;
                GroupMatesFinder</h2>
            </div>

            <section style="background-color: #dcf5f8; height: 40px;">

              <navbar>

                <ul class="nav-list" id="js-menu">
                  <!-- Course Nav -->
                  <li class="nav-item" style="margin-right: 40px; margin-left: 2rem;">
                    <% if(req.session.role=='teacher' ) { %>
                      <!-- Teacher -->
                      <% if (req.path!='/teacher/evaluation' ) { %>
                        <% if(req.path=='/teacher/evaluation/add' || (req.path).includes('/teacher/viewEvaluation') ) {
                          %>

                          <a class="left" href="/teacher/homepage">Courses</a>

                          <% } else { %>

                            <a class="nav-is-active left" href="/teacher/homepage"><b>Courses</b></a>

                            <% } %>

                              <% } else { %>

                                <a class="left" href="/teacher/homepage">Courses</a>

                                <% } %>


                                  <% } else { %>

                                    <!-- Student -->

                                    <!-- Course Nav -->
                                    <% if (req.path!='/invitation' && req.path !='/user/profile' && req.path
                                      !='/user/editProfile' ) { %>

                                      <a class="nav-is-active left" href="/homepage"><b>Courses</b></a>
                                      <% } else { %>

                                        <a class="left" href="/homepage">Courses</a>

                                        <% } %>

                                          <% }%>
                  </li>

                  <li class="nav-item">
                    <% if(req.session.role=='teacher' ) { %>

                      <!-- Evaluation Nav -->
                      <% if(req.path=='/teacher/evaluation' || req.path=='/teacher/evaluation/add' ||
                        (req.path).includes('/teacher/viewEvaluation')) { %>
                        <a class="nav-is-active left" href="/teacher/evaluation"><b>Evaluation</b></a>

                        <% } else { %>

                          <a class="left" href="/teacher/evaluation">Evaluation</a>

                          <% } %>

                            <% } else { %>

                              <!-- Invitation Nav -->

                              <% if(req.session.invitationNum> 0 ) { %>

                                <% if(req.path=='/invitation' ) { %>
                                  <a class="nav-is-active left" href="/invitation"><b>Invitation</b> <span
                                      class="badge rounded-pill bg-danger">
                                      <%= req.session.invitationNum %>
                                    </span></a>

                                  <% } else { %>
                                    <a class="left" href="/invitation">Invitation <span
                                        class="badge rounded-pill bg-danger">
                                        <%= req.session.invitationNum %>
                                      </span></a>
                                    <% } %>

                                      <% } else { %>

                                        <% if(req.path=='/invitation' ) { %>
                                          <a class="nav-is-active left" href="/invitation"><b>Invitation</b></a>

                                          <% } else { %>
                                            <a class="left" href="/invitation">Invitation</a>
                                            <% } %>

                                              <% }%>

                                                <% }%>
                  </li>

                  <li class="nav-item" style="margin-left: auto;">

                    <div class="dropdown">
                      <a class="nav-link dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-person-circle"
                          fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                          <path
                            d="M13.468 12.37C12.758 11.226 11.195 10 8 10s-4.757 1.225-5.468 2.37A6.987 6.987 0 0 0 8 15a6.987 6.987 0 0 0 5.468-2.63z" />
                          <path fill-rule="evenodd" d="M8 9a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                          <path fill-rule="evenodd"
                            d="M8 1a7 7 0 1 0 0 14A7 7 0 0 0 8 1zM0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8z" />
                        </svg> &nbsp;<%= req.session.role=='teacher' ? req.session.pName : req.session.fName %>
                      </a>

                      <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuLink">

                        <% if (req.session.role=='student' ) { %>
                          <li><a class="dropdown-item" href="/user/profile"><svg width="1.5em" height="1.5em"
                                viewBox="0 0 16 16" class="bi bi-person" fill="currentColor"
                                xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd"
                                  d="M10 5a2 2 0 1 1-4 0 2 2 0 0 1 4 0zM8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm6 5c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                              </svg> &nbsp;Profile</a></li>
                          <% } %>
                            <li><a class="dropdown-item" href="/user/logout"><svg xmlns="http://www.w3.org/2000/svg"
                                  width="1.5em" height="1.5em" fill="currentColor" class="bi bi-box-arrow-right"
                                  viewBox="0 0 16 16">
                                  <path fill-rule="evenodd"
                                    d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0v2z" />
                                  <path fill-rule="evenodd"
                                    d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                                </svg> &nbsp;Logout</a></li>
                      </ul>
                    </div>
                  </li>
                </ul>
              </navbar>

            </section>

            <div class="my-3" style="padding: 10px 40px;">

              <%- body %>
            </div>


          </div>

          <p class="my-2" style="text-align: center; color: #324880;">
            Copyright © <%= new Date().getFullYear() %> GroupMatesFinder. All Rights Reserved.
          </p>


        </div>




        <% } %>





