<body>

    <br>
    <h1><svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-book text-primary" fill="currentColor"
            xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd"
                d="M1 2.828v9.923c.918-.35 2.107-.692 3.287-.81 1.094-.111 2.278-.039 3.213.492V2.687c-.654-.689-1.782-.886-3.112-.752-1.234.124-2.503.523-3.388.893zm7.5-.141v9.746c.935-.53 2.12-.603 3.213-.493 1.18.12 2.37.461 3.287.811V2.828c-.885-.37-2.154-.769-3.388-.893-1.33-.134-2.458.063-3.112.752zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783z" />
        </svg> &nbsp;<%= sectionInfo.in[0].courseID %>: <%= sectionInfo.in[0].courseName %> (Section <%=
                    sectionInfo.sectionNum %>)
    </h1>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/homepage/<%= userid %>">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">
                <%= sectionInfo.in[0].courseID %>: <%= sectionInfo.in[0].courseName %> (Section <%=
                            sectionInfo.sectionNum %>)
            </li>
        </ol>
    </nav>


    <% if(sectionInfo.haveProject.length==0) { %>

        <div class="alert alert-warning" role="alert">
            No group project at this moment. Please check it later.
        </div>

        <% } else { %>

            <% var i=0; %>

                <div class="accordion" id="accordionExample">

                    <% sectionInfo.haveProject.forEach( function(project){ %>

                        <div class="accordion-item">
                            <h2 class="accordion-header" id="heading_<%= i %>">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapse_<%= i %>" aria-expanded="false"
                                    aria-controls="collapse_<%= i %>">
                                    <h3>
                                        <%= project.projectName %>
                                    </h3>
                                </button>
                            </h2>

                            <% if (sectionInfo.haveProject.length==1) { %>
                                <div id="collapse_<%= i %>" class="accordion-collapse show"
                                    aria-labelledby="heading_<%= i %>" data-bs-parent="#accordionExample">
                                    <% } else { %>

                                        <div id="collapse_<%= i %>" class="accordion-collapse collapse"
                                            aria-labelledby="heading_<%= i %>" data-bs-parent="#accordionExample">

                                            <% } %>
                                                <div class="accordion-body">

                                                    <dl class="row my-2">
                                                        <dt class="col-sm-4">Project Description:
                                                        </dt>
                                                        <dd class="col-sm-8">
                                                            <%= project.projectDescription %>
                                                        </dd>
                                                    </dl>

                                                    <dl class="row my-2">
                                                        <dt class="col-sm-4">Student Per
                                                            Group:
                                                        </dt>
                                                        <dd class="col-sm-8">
                                                            <%= project.numOfStudentMin %> to <%=
                                                                    project.numOfStudentMax %>
                                                        </dd>
                                                    </dl>

                                                    <dl class="row my-2">
                                                        <dt class="col-sm-4">
                                                            Group Formation Due Date:
                                                        </dt>
                                                        <dd class="col-sm-8">
                                                            <%= new Intl.DateTimeFormat('en-GB', { dateStyle: 'medium' ,
                                                                timeStyle: 'short' , hour12: 'true'
                                                                }).format(project.groupFormationDate) %>
                                                                &nbsp;&nbsp;
                                                                <a href="/student/section/<%= sectionInfo.id %>/project/<%= project.id %>/calendarFormDate"
                                                                    target="_blank" rel="noopener noreferrer"
                                                                    class="tip"><svg xmlns="http://www.w3.org/2000/svg"
                                                                        width="20" height="20" fill="currentColor"
                                                                        class="bi bi-calendar-plus" viewBox="0 0 16 16">
                                                                        <path
                                                                            d="M8 7a.5.5 0 0 1 .5.5V9H10a.5.5 0 0 1 0 1H8.5v1.5a.5.5 0 0 1-1 0V10H6a.5.5 0 0 1 0-1h1.5V7.5A.5.5 0 0 1 8 7z" />
                                                                        <path
                                                                            d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z" />
                                                                    </svg><span class="tooltiptext">Generate an event
                                                                        link for Google Calendar</span></a>
                                                        </dd>
                                                    </dl>

                                                    <dl class="row my-2">
                                                        <dt class="col-sm-4">
                                                            Project Submission Due Date:
                                                        </dt>
                                                        <dd class="col-sm-8">
                                                            <%= new Intl.DateTimeFormat('en-GB', { dateStyle: 'medium' ,
                                                                timeStyle: 'short' , hour12: 'true'
                                                                }).format(project.projectSubmitDate) %>
                                                                &nbsp;&nbsp;
                                                                <a href="/student/section/<%= sectionInfo.id %>/project/<%= project.id %>/calendarSubmitDate"
                                                                    target="_blank" rel="noopener noreferrer"
                                                                    class="tip"><svg xmlns="http://www.w3.org/2000/svg"
                                                                        width="20" height="20" fill="currentColor"
                                                                        class="bi bi-calendar-plus" viewBox="0 0 16 16">
                                                                        <path
                                                                            d="M8 7a.5.5 0 0 1 .5.5V9H10a.5.5 0 0 1 0 1H8.5v1.5a.5.5 0 0 1-1 0V10H6a.5.5 0 0 1 0-1h1.5V7.5A.5.5 0 0 1 8 7z" />
                                                                        <path
                                                                            d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z" />
                                                                    </svg><span class="tooltiptext">Generate an event
                                                                        link for Google Calendar</span></a>
                                                        </dd>
                                                    </dl>

                                                    <br>

                                                    <a href="/student/section/<%= sectionInfo.id %>/project/<%= project.id %>/evaluationEvent"
                                                        style="float: right; margin-left: 10px;"
                                                        class="btn btn-success">Peer
                                                        Evaluation</a>
                                                    <a href="/student/<%= userid %>/section/<%= sectionInfo.id %>/project/<%= project.id %>"
                                                        style="float: right;" class="btn btn-primary">Group
                                                        Formation</a>

                                                    <br>
                                                    <br>

                                                </div>
                                        </div>
                                </div>

                                <% i++; %>
                                    <% }); %>

                        </div>

                        <% } %>

</body>


<style>
    .tip {
        position: relative;
        display: inline-block;
    }

    .tip .tooltiptext {
        visibility: hidden;
        width: 220px;
        background-color: rgba(70, 70, 70, 0.795);
        color: #fff;
        text-align: center;
        border-radius: 6px;
        padding: 5px 0;
        position: absolute;
        z-index: 1;
        top: -5px;
        left: 150%;
    }

    .tip .tooltiptext::after {
        content: "";
        position: absolute;
        top: 35%;
        right: 100%;
        margin-top: -5px;
        border-width: 6px;
        border-style: solid;
        border-color: transparent rgba(70, 70, 70, 0.795) transparent transparent;
    }

    .tip:hover .tooltiptext {
        visibility: visible;
    }
</style>