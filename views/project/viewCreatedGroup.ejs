<body>

    <br>
    <h1><svg xmlns="http://www.w3.org/2000/svg" width="1.4em" height="1.4em" fill="currentColor"
            class="bi bi-star-fill text-warning" viewBox="0 0 16 16">
            <path
                d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.283.95l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
        </svg>
        &nbsp;<%= sectionInfo.in[0].courseID %>: <%= sectionInfo.in[0].courseName %> (Section <%= sectionInfo.sectionNum
                    %>)
    </h1>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/homepage/<%= userid %>">Home</a></li>
            <li class="breadcrumb-item"><a href="/student/<%= userid %>/viewProject/<%= sectionInfo.id %>">
                    <%= sectionInfo.in[0].courseID %>: <%= sectionInfo.in[0].courseName %> (Section <%=
                                sectionInfo.sectionNum %>)
                </a></li>
            <li class="breadcrumb-item"><a
                    href="/student/<%= userid %>/section/<%= sectionInfo.id %>/project/<%= sectionInfo.haveProject[0].id %>">
                    <%= sectionInfo.haveProject[0].projectName %>
                </a></li>
            <li class="breadcrumb-item active" aria-current="page">
                Group <%= groupInfo.groupNum %>
            </li>
        </ol>
    </nav>

    <div class="container my-5" style="width:800px;">
        <h2>Welcome to Group <%= groupInfo.groupNum %>
        </h2>
        <div class="my-3">
            <textarea class="form-control" placeholder="Add Group Description (Optional)"></textarea>
        </div>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" id="home-tab" data-bs-toggle="tab" href="#home" role="tab"
                    aria-controls="home" aria-selected="true">Group Members</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="profile-tab" data-bs-toggle="tab" href="#profile" role="tab"
                    aria-controls="profile" aria-selected="false">Waiting (<%= requestToJoin.consider.length %>)</a>
            </li>

        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

                <p class="my-3">Participants: <%= groupInfo.createdBy.length %>
                </p>

                <div class="list-group" style="width: 300px;">


                    <a href="#" class="list-group-item"><button type="button" class="btn btn-link"
                            style="font-size: 18px; text-decoration: none;" data-bs-toggle="modal"
                            data-bs-target="#inviteUserModal" style="float: right;"><svg
                                xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor"
                                class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                                <path fill-rule="evenodd"
                                    d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z" />
                            </svg> &nbsp; Invite Members</button></a>

                    <% groupInfo.createdBy.forEach( function(model) { %>
                        <a href="#" class="list-group-item">
                            <img src="<%= model.imgURL %>" alt="Admin" class="rounded-circle" width="45">
                            &nbsp; <%= model.fullName %>
                                <%= model.id==userid ? '(You)' : '' %>
                        </a>
                        <% }); %>
                </div>

            </div>
            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">

                <br>

                <div class="list-group">

                    <% requestToJoin.consider.forEach( function(model) { %>
                        <a href="#" class="list-group-item">
                            <img src="<%= model.imgURL %>" alt="Admin" class="rounded-circle" width="45">
                            &nbsp; <%= model.fullName %>

                                <button type="button" class="btn btn-danger mx-1 my-2 btn-sm" data-bs-toggle="modal"
                                    style="float: right;" data-bs-target="#rejectMemberModal"
                                    data-bs-studentName="<%= model.fullName %>" data-bs-studentid="<%= model.id %>">
                                    Reject
                                </button>

                                <button type="button" class="btn btn-success mx-1 my-2 btn-sm" data-bs-toggle="modal"
                                    data-bs-target="#acceptMemberModal" data-bs-studentName="<%= model.fullName %>"
                                    data-bs-studentid="<%= model.id %>" style="float: right;">
                                    Accept
                                </button>
                        </a>

                        <% }); %>


                </div>
            </div>

        </div>
    </div>



    <!-- Triggered Modal (Invite user) -->
    <div class="modal fade" id="inviteUserModal" tabindex="-1" aria-labelledby="inviteUserModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="inviteUserModalLabel">Invite group members</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form
                    action="/student/<%= userid %>/section/<%= sectionInfo.id %>/project/<%= sectionInfo.haveProject[0].id %>/group/<%= groupInfo.id %>/inviteMember"
                    method="POST" onsubmit="createForm(this);return false">
                    <div class="modal-body">

                        <div class="mb-3">
                            <label for="recipient-name" class="col-form-label">Please input the member's
                                student ID:</label>
                            <input type="text" class="form-control" id="recipient-name" name="studentid">
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Invite members</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <!-- Triggered Modal - Accept Members -->
    <div class="modal fade" id="acceptMemberModal" tabindex="-1" aria-labelledby="acceptMemberModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="acceptMemberModalLabel">Accept Member
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- xxx -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                    <button type="button" class="btn btn-primary" onclick="acceptToGroup()">Confirm</button>

                </div>
            </div>
        </div>
    </div>

    <!-- Triggered Modal - Reject Members -->
    <div class="modal fade" id="rejectMemberModal" tabindex="-1" aria-labelledby="rejectMemberModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="rejectMemberModalLabel">Reject Member
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- xxx -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                    <button type="button" class="btn btn-primary" onclick="rejectFromGroup()">Confirm</button>

                </div>
            </div>
        </div>
    </div>



</body>

<script>

    async function createForm(oFormElement) {

        var response = await fetch(oFormElement.action, {
            method: "POST",
            credentials: 'same-origin',
            headers: { 'content-type': 'application/x-www-form-urlencoded' }, //enctype code of form
            //put into array            //map into input and encode                                                         //join it
            body: Array.from(oFormElement).map(input => encodeURIComponent(input.name) + '=' + encodeURIComponent(input.value)).join('&'),
        });


        if (response.ok) {
            // validatePwd()
            var data = await response.json();   // for res.ok() or res.json()
            alert(data.message);
            window.location = data.url;
            //location.reload(true);
        }
        // else if (response.status == 401) {
        //     var data = await response.text();   // for res.send()
        //     alert(data);
        // } else {
        //     alert(response.statusText);
        // }

    };


    // For accept member modal
    var exampleModal = document.getElementById('acceptMemberModal');

    var studentid;

    exampleModal.addEventListener('show.bs.modal', function (event) {
        // Button that triggered the modal
        var button = event.relatedTarget
        // Extract info from data-bs-* attributes
        var studentName = button.getAttribute('data-bs-studentName');
        studentid = button.getAttribute('data-bs-studentid');

        var modalBodyInput = exampleModal.querySelector('.modal-body');

        modalBodyInput.textContent = "Confirm to add " + studentName + " to your group ?";

    });

    async function acceptToGroup() {

        var response = await fetch('/student/' + <%= userid %> + '/section/' + <%= sectionInfo.id %> + '/project/' + <%= sectionInfo.haveProject[0].id %> + '/' + studentid + '/acceptToGroup/' + <%= groupInfo.id %>, {
            method: "POST",
            credentials: 'same-origin',
        });

        if (response.ok) {
            var data = await response.json();
            alert(data.message);
            window.location = data.url;
        }

    };



    // For reject member modal
    var exampleModal2 = document.getElementById('rejectMemberModal');

    var studentid;

    exampleModal2.addEventListener('show.bs.modal', function (event) {
        // Button that triggered the modal
        var button = event.relatedTarget
        // Extract info from data-bs-* attributes
        var studentName = button.getAttribute('data-bs-studentName');
        studentid = button.getAttribute('data-bs-studentid');

        var modalBodyInput = exampleModal2.querySelector('.modal-body');

        modalBodyInput.textContent = "Confirm to reject " + studentName + "'s request ?";

    });

    async function rejectFromGroup() {

        var response = await fetch('/student/' + <%= userid %> + '/section/' + <%= sectionInfo.id %> + '/project/' + <%= sectionInfo.haveProject[0].id %> + '/' + studentid + '/rejectFromGroup/' + <%= groupInfo.id %>, {
            method: "POST",
            credentials: 'same-origin',
        });

        if (response.ok) {
            var data = await response.json();
            // alert(data.message);
            window.location = data.url;
        }

    };

</script>