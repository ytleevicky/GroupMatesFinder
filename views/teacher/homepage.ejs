<body>

    <br>
    <h1><svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-house text-warning" fill="currentColor"
            xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd"
                d="M2 13.5V7h1v6.5a.5.5 0 0 0 .5.5h9a.5.5 0 0 0 .5-.5V7h1v6.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5zm11-11V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z" />
            <path fill-rule="evenodd"
                d="M7.293 1.5a1 1 0 0 1 1.414 0l6.647 6.646a.5.5 0 0 1-.708.708L8 2.207 1.354 8.854a.5.5 0 1 1-.708-.708L7.293 1.5z" />
        </svg> &nbsp;Home</h1>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">Home</li>
        </ol>
    </nav>

    <hr>

    <div class="row">
        <div class="col-6">
            <h3>Courses:</h3>
        </div>
        <div class="col-6">
            <!-- <a href="/createCourse/<%= userid %>" class="btn btn-outline-primary" style="float: right;">Create
                Course</a> -->

            <button type="button" class="btn btn-outline-primary" style="float: right;" data-bs-toggle="modal"
                data-bs-target="#exampleModal" data-bs-target="#staticBackdrop"><svg xmlns="http://www.w3.org/2000/svg"
                    width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                    <path
                        d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                    <path fill-rule="evenodd"
                        d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                </svg> Create Course</button>

        </div>
    </div>


    <% allCourses.instruct.forEach( function(course) { %>

        <div class="card mt-2 px-3 mb-3">
            <div class="card-body ">
                <div class="row">
                    <div class="col-12 ">
                        <h4 class="card-title "><b><a href="/teacher/<%= userid %>/viewCourse/<%= course.id %>">
                                    <%= course.courseID %> -
                                        <%= course.courseName %>
                                            [<%= course.courseTerm %>]
                                </a></b></h4>
                    </div>
                    <div class="col">
                        <h6 class="card-subtitle mb-2 text-muted">
                            <p class="card-text text-muted small "> Teacher: <span class="font-weight-bold">
                                    <%= allCourses.preferred_name %>
                                </span>
                            </p>
                        </h6>
                    </div>
                </div>
            </div>
        </div>

        <% }); %>


            <!-- Triggered Modal  -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true" data-bs-backdrop="static">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Create Course</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                        <!-- form -->
                        <form action="/createCourse/<%= userid %>" method="POST"
                            onsubmit="createForm(this);return false" class="was-validated">
                            <div class="modal-body">

                                <div class="mb-3">
                                    <label for="inputCourseName" class="col-form-label">Course Name:</label>
                                    <input type="text" class="form-control" placeholder="Please enter the course name"
                                        name="Course[courseName]" required>
                                </div>
                                <div class="mb-3">
                                    <label for="inputCourseID" class="col-form-label">Course Code:</label>
                                    <input type="text" class="form-control" placeholder="Please enter the course code"
                                        name="Course[courseID]" required>
                                </div>
                                <div class="mb-3">
                                    <label for="inputNumOfSection" class="col-form-label">Number of
                                        Section:</label>
                                    <input type="number" class="form-control"
                                        placeholder="Please enter the number of section in this course"
                                        name="Course[numOfSection]" required min="1">
                                </div>
                                <div class="mb-3">
                                    <label for="inputeventLocation" class="col-form-label">Academic
                                        Year:</label>
                                    <select class="form-control" name="Course[courseTerm]" required>
                                        <option value="">Please choose the academic year for this course</option>
                                        <option value="2019-2020 Semester 1">2019-2020 Semester 1</option>
                                        <option value="2019-2020 Semester 2">2019-2020 Semester 2</option>
                                    </select>
                                </div>

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-primary">Create</button>
                                </div>

                                <!-- <a href="/teacher/homepage/<%= userid %>" class="btn btn-danger"
                                    style="float:right;">Cancel</a>
                                <button type="submit" class="btn btn-primary" style="float:right;">Save</button> -->

                            </div>
                        </form>
                    </div>
                </div>
            </div>


</body>

<script>
    async function createForm(oFormElement) {

        var response = await fetch(oFormElement.action, {
            method: "POST",
            credentials: 'same-origin',
            headers: { 'content-type': 'application/x-www-form-urlencoded' }, //enctype code of form
            //put into array            //map into input and encode                                                         //join it
            body: Array.from(oFormElement).map(input => encodeURIComponent(input.name) + '=' + encodeURIComponent(input.value)).join('&'),
        });


        if (response.ok) {
            // validatePwd()
            var data = await response.json();   // for res.ok() or res.json()
            alert(data.message);
            window.location = data.url;
            //location.reload(true);
        }
        // else if (response.status == 401) {
        //     var data = await response.text();   // for res.send()
        //     alert(data);
        // } else {
        //     alert(response.statusText);
        // }

    };
</script>


<style>
    a {
        text-decoration: none;
    }
</style>